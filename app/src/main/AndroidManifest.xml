<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karan.picchat">

    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".PicChatApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:uiOptions="splitActionBarWhenNarrow"
        android:theme="@style/MyTheme">
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"

            android:label="Login your account"></activity>
        <activity
            android:name=".EditFriendsActivity"
            android:label="Add Friends"></activity>
        <activity
            android:name=".SignUpActivity"
            android:label="Create  account"></activity>
        <activity
            android:name=".InboxActivity"
            android:label="@string/title_activity_inbox"></activity>
        <activity
            android:name=".ViewImageActivity"
            android:label="View Image"></activity>
        <activity
            android:name=".RecipientsActivity"
            android:label="Recipient activity" >
            </activity>

    </application>

</manifest>
